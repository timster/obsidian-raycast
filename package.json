{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "obsidian-raycast",
  "title": "Obsidian",
  "description": "Search and create notes in Obsidian",
  "icon": "extension-icon.png",
  "author": "timster",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-notes",
      "title": "Search Notes",
      "description": "Search all notes in Obsidian directory.",
      "mode": "view"
    },
    {
      "name": "list-tasks",
      "title": "List Tasks",
      "description": "List all tasks.",
      "mode": "view"
    },
    {
      "name": "search-snippets",
      "title": "Search Snippets",
      "description": "Search all snippets in Obsidian directory.",
      "mode": "view"
    },
    {
      "name": "open-daily-note",
      "title": "Open Daily Note",
      "description": "Open daily note in Obsidian.",
      "mode": "no-view"
    },
    {
      "name": "open-tasks",
      "title": "Open Current Tasks",
      "description": "Open current tasks in Obsidian.",
      "mode": "no-view"
    },
    {
      "name": "create-task",
      "title": "Create Task",
      "description": "Create a task in Obsidian.",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text"
        }
      ]
    },
    {
      "name": "create-note",
      "title": "Create Note",
      "description": "Create a note in Obsidian.",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text"
        }
      ]
    },
    {
      "name": "create-meeting-note",
      "title": "Create Meeting Note",
      "description": "Create a meeting note in Obsidian.",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.4",
    "@raycast/utils": "^1.17.0",
    "fast-glob": "^3.3.3",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "preferences": [
    {
      "name": "obsidianDirectory",
      "type": "textfield",
      "required": true,
      "title": "Obsidian Directory",
      "description": "Directory containing Obsidian notes",
      "placeholder": "/Users/tim/Documents/Obsidian"
    },
    {
      "name": "splunkSearchUrl",
      "type": "textfield",
      "required": true,
      "title": "Splunk Search URL",
      "description": "URL for Splunk search endpoint",
      "placeholder": "https://client.splunkcloud.com/en-US/app/search/search?q="
    },
    {
      "name": "querySearchUrl",
      "type": "textfield",
      "required": true,
      "title": "Query Search URL",
      "description": "URL for SQL search endpoint",
      "placeholder": "https://admin.example.com/console?sql="
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}